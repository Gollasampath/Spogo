<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_button_grey"
    app:cardBackgroundColor="@color/bg"
    app:cardCornerRadius="@dimen/_10sdp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_230sdp"
        android:background="@drawable/rounded_button_grey"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_grey"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:gravity="left"
                    android:src="@drawable/ic_heart_outline" />

                <ImageView
                    android:id="@+id/healthproductimage"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/healthproductnewtag"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/ic_newtag"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="right"

                    android:paddingRight="@dimen/_5sdp"
                    android:text="New"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/healthproducttext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center"
                android:text="Bow Service"

                android:textColor="@color/lightblack"
                android:textSize="@dimen/_12sdp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/healthproductofferprice"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:background="@drawable/ic_ratetag"

                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/healthproductmainprice"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/poppinsregular"

                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/healthproductdiscount"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:background="@drawable/discounttag"

                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>

            <TextView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/ic_ratingtag"
                android:fontFamily="@font/poppinsregular"
                android:gravity="right"

                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:text="4.9"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
