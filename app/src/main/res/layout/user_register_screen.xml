<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_secondary"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:src="@drawable/ic_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/roundedcurvetop"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"

            android:text="Signup"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"

            android:text="Create a new account with your name,email "
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"

            android:text="phone and location. "
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"

            android:background="@drawable/rounded_button_lightgrey"
            android:fontFamily="@font/poppinsregular"
            android:hint="Full Name"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="@dimen/_92sdp"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_button_lightgrey"

            android:fontFamily="@font/poppinsregular"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="@dimen/_92sdp"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/mobileno_edit"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"

            android:background="@drawable/rounded_button_lightgrey"
            android:fontFamily="@font/poppinsregular"
            android:hint="Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingLeft="@dimen/_92sdp"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"

            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_button_lightgrey"
            android:drawableRight="@drawable/ic_my_location_24px"
            android:fontFamily="@font/poppinsregular"
            android:hint="Location"
            android:maxLines="1"
            android:paddingLeft="@dimen/_92sdp"
            android:paddingRight="@dimen/_30sdp"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />

        <Button
            android:id="@+id/usergetotp_btn"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rounded_button_yellow"

            android:fontFamily="@font/poppinsregular"
            android:text="GET OTP"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>