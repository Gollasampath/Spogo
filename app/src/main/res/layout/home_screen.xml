<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_20sdp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/background_secondary"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <EditText
                        android:layout_width="@dimen/_280sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/reatangle_button_white"
                        android:drawableLeft="@drawable/ic_search"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="Search Products"
                        android:maxLines="1"

                        android:paddingLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_14sdp"
                        android:visibility="gone" />
                </RelativeLayout>


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/imagesliderpager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:layout_marginTop="@dimen/_5sdp" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/shopcircleindicator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="bottom"
                    app:centered="true"
                    app:fillColor="@color/colorPrimary"
                    app:pageColor="#fff"
                    app:snap="false" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/shop_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/shopnormal" />

                    <ImageView
                        android:id="@+id/repair_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/repairnormal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/retail_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/retailernormal" />

                    <ImageView
                        android:id="@+id/trainer_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/trainernormal" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/buidprofile_button"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_40sdp"
                android:background="@drawable/rounded_button_yellow"
                android:drawableLeft="@drawable/ic_user_icon"
                android:gravity="center"
                android:paddingStart="@dimen/_40sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:text="Build your Profile"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
