<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/top_bar_productdetails" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/procutindetail_title"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/procutindetail_newimage"

                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_newtag"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"
                    android:text="New"

                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/procutindetail_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Cricket Bats"

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

            </LinearLayout>

            <ImageView
                android:id="@+id/procutindetail_imageview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_230sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/viewpagerlinear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/procutindetail_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_230sdp"
                    android:layout_gravity="center"

                    />


                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/productcircleindicator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:gravity="bottom"
                    app:centered="true"
                    app:fillColor="@color/colorPrimary"
                    app:pageColor="#fff"
                    app:snap="false" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/border"></View>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progressBarproductdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/procutindetail_offerprice"

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="0.2"
                    android:background="@drawable/ic_ratetag"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/procutindetail_mainprice"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/poppinsregular"

                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/procutindetail_discount"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_weight="0.2"
                    android:background="@drawable/discounttag"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"
                    android:text=""

                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_weight="0.4"
                    android:drawableRight="@drawable/share"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"

                    android:paddingRight="@dimen/_10sdp"
                    android:text="Share"
                    android:textColor="@color/lightwhite"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/border"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_ratingtag" />

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_weight="0.5"
                    android:paddingLeft="@dimen/_110sdp"
                    android:src="@drawable/ic_heartselected" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_10sdp"

                    android:text="560 ratings &amp;5 Reviews"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_60sdp"
                    android:text="Add to wishlist"

                    android:textColor="@color/lightwhite"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/border"
                android:visibility="gone"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:background="@color/bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="DELIVERY"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Current delivery location"

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_11sdp" />

                <EditText
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_button"

                    android:drawableLeft="@drawable/ic_address"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:hint="50072"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColorHint="@color/lightgrey"
                    android:textSize="@dimen/_13sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/border1"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:background="@drawable/ic_codbackground"

                        android:fontFamily="@font/poppinsregular"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"

                        android:text="COD \nAVAILABLE"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp" />

                    <Button
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:background="@drawable/ic_codbackground"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="center"

                        android:padding="@dimen/_5sdp"
                        android:text="FREE HOME \nDELIVERY"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp" />

                    <Button
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:background="@drawable/ic_codbackground"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="center"

                        android:padding="@dimen/_5sdp"
                        android:text="Return \nPolicy"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="@dimen/_20sdp"
                android:text="PRODUCT DETAILS"

                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="@dimen/_20sdp"

                android:text="Product Specification"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/border"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Size"

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/procutindetail_size"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:text=""
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Weight"

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/procutindetail_weight"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:text=""

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Gender"

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/procutindetail_type"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:text=""

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Willow Grade"

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/procutindetail_grade"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:text=""

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Player Type "

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/procutindetail_playertype"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:text=""

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_20sdp"

                    android:text="Sweet Spot Location"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/procutindetail_location"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Bottom"

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Brand"

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/procutindetail_brand"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/poppinsregular"
                    android:text=""

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/procutindetail_qty"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Minium Order Quantity"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="@dimen/_20sdp"
                android:text="DESCRIPTION"

                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="italic"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"

                android:background="@color/border"
                android:visibility="gone"></View>

            <TextView
                android:id="@+id/procutindetail_description"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="@dimen/_20sdp"

                android:text=""
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/bg"></View>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="@dimen/_20sdp"
                android:text="SELLER INFORMATION"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="italic"

                android:visibility="gone" />

            <TextView
                android:id="@+id/procutindetail_sellerinfo"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="@dimen/_20sdp"
                android:text="Vivek Sachadeva"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/procutindetail_sellerlocation"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="@dimen/_20sdp"
                android:text="Location"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="@dimen/_20sdp"

                android:text="Suraj Kund Road,Devi Nagar,Meerut"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="RELATED PRODUCTS"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/poppinsregular"
                    android:paddingRight="@dimen/_10sdp"
                    android:text="View all"

                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productrelatedrecyclerview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:layout_marginTop="@dimen/_10sdp" />

        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/procutindetail_savelater"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="0.5"
            android:background="@color/green"
            android:drawableRight="@drawable/ic_save_icon"
            android:fontFamily="@font/poppinsregular"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:text="SAVE FOR LATER"

            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/addcart_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="0.5"
            android:background="@color/yellow"
            android:drawableRight="@drawable/ic_add_shopping_cart_24px"
            android:fontFamily="@font/poppinsregular"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:text="ADD TO CART"

            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>