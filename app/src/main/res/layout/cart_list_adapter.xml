                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="0.1"
                        android:paddingRight="@dimen/_5sdp"
                        android:src="@drawable/ic_delete" />
