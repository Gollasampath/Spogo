<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_button_boardergrey">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_boardergrey"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">

                <ImageView
                    android:id="@+id/productimage"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="@dimen/_150sdp" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="left"
                    android:src="@drawable/ic_heart_outline" />

                <TextView
                    android:id="@+id/prodcut_newimage"

                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/ic_newtag"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="right"

                    android:paddingRight="@dimen/_5sdp"
                    android:text="New"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:text=""

            android:textColor="@color/lightblack"
            android:textSize="@dimen/_12sdp" />


        <LinearLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/offerprice_product"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/ic_ratetag"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center"
                android:text=""

                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:id="@+id/mainprice_product"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center"
                android:text=""


                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/discount_prodcut"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:background="@drawable/discounttag"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center"
                android:text=""

                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

        <TextView

            android:id="@+id/addcart_btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/rounded_button_yellow"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="ADD TO CART"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>